@model UserLogInViewModel

@{
    ViewData["Title"] = "Giriş Yap";
}

@await Html.PartialAsync("_navbar")

<div class="bg-light d-flex align-items-center justify-content-center" style="min-height: 80vh;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-4">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="card shadow-lg p-4 rounded-4">
                    <div class="card-body">
                        <h2 class="text-center text-primary mb-4 fw-bold">Giriş Yap</h2>

                        <!-- Giriş Yap Formu -->
                        <form asp-controller="User" asp-action="UserLogIn" method="POST">
                            <div class="mb-3">
                                <label asp-for="EMail" class="form-label fw-semibold">E-posta</label>
                                <input asp-for="EMail" class="form-control rounded-3 shadow-sm">
                            </div>
                            <div class="mb-3 position-relative">
                                <label asp-for="Password" class="form-label fw-semibold">Şifre</label>
                                <div class="position-relative">
                                    <input asp-for="Password" id="password" type="password" class="form-control rounded-3 shadow-sm pe-5">
                                    <!-- Şifreyi göster/gizle ikonu -->
                                    <i id="eyeIcon" class="bi bi-eye position-absolute end-0 top-50 translate-middle-y me-3"
                                       onclick="togglePassword('password', 'eyeIcon')" style="cursor: pointer;"></i>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-success w-100 py-2 rounded-3">Giriş Yap</button>
                        </form>

                        <!-- Kayıt Olmaya Yönlendirme -->
                        <div class="text-center mt-3">
                            <span class="text-muted">
                                Hesabınız yok mu?
                                <a class="fw-semibold text-primary text-decoration-none" asp-controller="User" asp-action="UserSignUp">Kayıt Ol</a>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts
{
    <script src="~/js/togglePasswordFunc.js"></script>
}
