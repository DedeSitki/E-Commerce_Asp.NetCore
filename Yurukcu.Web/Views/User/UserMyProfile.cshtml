@model UserMyProfileViewModel

@{
    ViewData["Title"] = "Profilim";
}

@await Html.PartialAsync("_navbar")

<div class="container mt-5 col-md-6">
    <h2 class="mb-4 text-center">Profil Bilgilerini Düzenle</h2>
    <form asp-action="UserMyProfile" method="post">
        <input type="hidden" asp-for="UserId" />

        <div class="mb-3">
            <label asp-for="FullName" class="form-label">Ad Soyad</label>
            <input asp-for="FullName" class="form-control rounded-3 shadow-sm">
            <span asp-validation-for="FullName" class="text-danger"></span>

        </div>

        <div class="mb-3">
            <label asp-for="Gender" class="form-label">Cinsiyet</label>
            <input asp-for="Gender" class="form-control rounded-3 shadow-sm">
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="PhoneNumber" class="form-label">Telefon Numarası</label>
            <input asp-for="PhoneNumber" class="form-control rounded-3 shadow-sm">
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Birthday" class="form-label">Doğum Tarihi</label>
            <input asp-for="Birthday" type="date" class="form-control rounded-3 shadow-sm">
            <span asp-validation-for="Birthday" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success">Güncelle</button>
    </form>
</div>
