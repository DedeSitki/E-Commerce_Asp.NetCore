@model UserCreateViewModel

@{
    ViewData["Title"] = "Kayıt Ol";
}

@await Html.PartialAsync("_navbar")

<div class="bg-light d-flex align-items-center justify-content-center" style="min-height: 80vh;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-4">
                <div asp-validation-summary="All"></div>
                <div class="card shadow-lg p-4 rounded-4">
                    <div class="card-body">
                        <h2 class="text-center text-primary mb-4 fw-bold">Kayıt Ol</h2>

                        <!-- Kayıt Ol Formu -->
                        <form asp-controller="User" asp-action="UserSignUp" method="POST">
                            <div class="mb-3">
                                <label asp-for="EMail" class="form-label fw-semibold">E-posta</label>
                                <input asp-for="EMail" class="form-control rounded-3 shadow-sm">
                                <span asp-validation-for="EMail" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Password" class="form-label fw-semibold">Şifre</label>
                                <input asp-for="Password" class="form-control rounded-3 shadow-sm">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="RePassword" class="form-label fw-semibold">Şifreyi Onayla</label>
                                <input asp-for="RePassword" class="form-control rounded-3 shadow-sm">
                                <span asp-validation-for="RePassword" class="text-danger"></span>
                            </div>
                            <button type="submit" class="btn btn-success w-100 py-2 rounded-3">Kayıt Ol</button>
                        </form>

                        <!-- Giriş Yapmaya Yönlendirme -->
                        <div class="text-center mt-3">
                            <span class="text-muted">
                                Zaten hesabınız var mı?
                                <a class="fw-semibold text-primary text-decoration-none" asp-controller="User" asp-action="UserLogIn">Giriş Yap</a>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
