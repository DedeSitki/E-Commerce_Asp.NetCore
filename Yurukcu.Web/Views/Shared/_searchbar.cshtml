<div class="container my-4 mb-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="input-group">
                <span class="input-group-text bg-white border-end-0">
                    <i class="bi bi-search text-muted"></i>
                </span>
                <input type="text" class="form-control border-start-0" placeholder="Aradığınız ürünü yazınız...">
                <button class="btn btn-danger">ARA</button>

                <a asp-controller="User" asp-action="UserShoppingBag"
                   class="btn btn-outline-danger d-flex align-items-center ms-2 rounded position-relative">
                    <i class="bi bi-cart4 me-2"></i> Sepetim
                    @if (Context.Session.GetInt32("CartItemCount") > 0)
                    {
                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                            @Context.Session.GetInt32("CartItemCount")
                        </span>
                    }
                </a>
            </div>
        </div>
    </div>
</div>
